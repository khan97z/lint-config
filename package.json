{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch": "pnpm --parallel -r run watch",
    "build": "pnpm -r run build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "lint:script": "eslint --ext .js,.jsx,.vue,.ts,.tsx --fix --quiet ./",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:style": "stylelint --fix \"src/**/*.{css,scss,vue,html}\"",
    "cz": "czg"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,vue}": [
      "npm run lint:script",
      "git add ."
    ],
    "**/*.{html,scss,vue,css}": [
      "npm run lint:style",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "engines": {
    "node": ">= 16.13.0",
    "pnpm": ">= 7.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/config-conventional": "^17.3.0",
    "czg": "^1.5.3",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.4"
  },
  "dependencies": {
    "@faxjs/commitlint-config": "workspace:*",
    "@faxjs/eslint-config": "workspace:*",
    "@faxjs/prettier-config": "workspace:*"
  },
  "packageManager": "pnpm@7.20.0",
  "license": "MIT"
}
